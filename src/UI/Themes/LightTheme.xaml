<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Window Background -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="AlternateBackgroundBrush" Color="#F8F8F8"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#323130"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#605E5C"/>
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#8A8886"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E1DFDD"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="#EDEBE9"/>
    
    <!-- Control Colors -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#E1DFDD"/>
    <SolidColorBrush x:Key="ControlHoverBackgroundBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="ControlPressedBackgroundBrush" Color="#EDEBE9"/>
    
    <!-- Button Colors (maintain existing accent colors) -->
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="ButtonForegroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#0078D4"/>
    
    <!-- Secondary Button Colors -->
    <SolidColorBrush x:Key="SecondaryButtonBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="#323130"/>
    <SolidColorBrush x:Key="SecondaryButtonHoverBackgroundBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="SecondaryButtonBorderBrush" Color="#8A8886"/>
    
    <!-- Danger/Delete Button Colors -->
    <SolidColorBrush x:Key="DangerButtonBackgroundBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="DangerButtonHoverBackgroundBrush" Color="#B71C1C"/>
    
    <!-- Success/Apply Button Colors -->
    <SolidColorBrush x:Key="SuccessButtonBackgroundBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="SuccessButtonHoverBackgroundBrush" Color="#0E5E0E"/>
    
    <!-- Title Bar Colors -->
    <SolidColorBrush x:Key="TitleBarBackgroundBrush" Color="#F3F3F3"/>
    <SolidColorBrush x:Key="TitleBarTextBrush" Color="#323130"/>
    <SolidColorBrush x:Key="WindowControlHoverBrush" Color="#E1DFDD"/>
    <SolidColorBrush x:Key="CloseButtonHoverBrush" Color="#E81123"/>
    
    <!-- List/Grid Colors -->
    <SolidColorBrush x:Key="ListItemBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ListItemHoverBackgroundBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="ListItemSelectedBackgroundBrush" Color="#E1DFDD"/>
    
    <!-- Input Colors -->
    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#E1DFDD"/>
    <SolidColorBrush x:Key="TextBoxFocusBorderBrush" Color="#0078D4"/>
    
    <!-- ComboBox Colors -->
    <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="ComboBoxBorderBrush" Color="#E1DFDD"/>
    <SolidColorBrush x:Key="ComboBoxHoverBackgroundBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="ComboBoxDropDownBackgroundBrush" Color="White"/>
    
    <!-- CheckBox Colors -->
    <SolidColorBrush x:Key="CheckBoxBackgroundBrush" Color="White"/>
    <SolidColorBrush x:Key="CheckBoxBorderBrush" Color="#8A8886"/>
    <SolidColorBrush x:Key="CheckBoxCheckmarkBrush" Color="#0078D4"/>
    
    <!-- Tooltip Colors -->
    <SolidColorBrush x:Key="TooltipBackgroundBrush" Color="#323130"/>
    <SolidColorBrush x:Key="TooltipTextBrush" Color="White"/>
    
    <!-- Shadow Effects -->
    <DropShadowEffect x:Key="CardShadow" 
                      ShadowDepth="2" 
                      Direction="270" 
                      BlurRadius="8" 
                      Opacity="0.15" 
                      Color="Black"/>
                      
    <DropShadowEffect x:Key="ButtonShadow" 
                      ShadowDepth="1" 
                      Direction="270" 
                      BlurRadius="4" 
                      Opacity="0.1" 
                      Color="Black"/>
</ResourceDictionary>