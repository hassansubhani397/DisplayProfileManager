<Window x:Class="DisplayProfileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DisplayProfileManager"
        mc:Ignorable="d"
        Title="Display Profile Manager" Height="600" Width="900" MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#F3F3F3" WindowStyle="None" AllowsTransparency="True">
    
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#E5E5E5"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D2D0CE"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C8C6C4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1DFDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <Style x:Key="ModernTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource ModernTextBlockStyle}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#201F1E"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#8A8A8A" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1" Padding="24,16"
                    MouseLeftButtonDown="HeaderBorder_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Display Profile Manager" Style="{StaticResource HeaderTextBlockStyle}"/>
                    <TextBlock Text="Manage display resolution and DPI scaling profiles" 
                               Style="{StaticResource ModernTextBlockStyle}" 
                               Opacity="0.8" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Name="MinimizeButton" Content="🗕" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Width="32" Height="32" Padding="0" 
                            Margin="0,0,8,0" Click="MinimizeButton_Click"/>
                    <Button Name="CloseButton" Content="✕" 
                            Style="{StaticResource SecondaryButtonStyle}" 
                            Width="32" Height="32" Padding="0" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="#E1DFDD" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1" Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Display Profiles" 
                                       Style="{StaticResource ModernTextBlockStyle}" 
                                       FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Name="AddProfileButton" Content="+ Add Profile" 
                                        Style="{StaticResource ModernButtonStyle}" 
                                        Margin="0,0,8,0" Click="AddProfileButton_Click"/>
                                <Button Name="RefreshButton" Content="🔄" 
                                        Style="{StaticResource SecondaryButtonStyle}" 
                                        Width="32" Height="32" Padding="0" 
                                        Click="RefreshButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <ListBox Grid.Row="1" Name="ProfilesListBox" 
                             Style="{StaticResource ModernListBoxStyle}" 
                             BorderThickness="0" 
                             SelectionChanged="ProfilesListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="0,2" Background="Transparent">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock Grid.Column="0" Text="{Binding Name}" 
                                                       FontWeight="Medium" FontSize="14"/>
                                            
                                            <TextBlock Grid.Column="1" Text="Default" 
                                                       FontSize="12" Foreground="#0078D4" 
                                                       FontWeight="Medium" 
                                                       Visibility="{Binding IsDefault, Converter={x:Static local:BooleanToVisibilityConverter.Instance}}"/>
                                        </Grid>
                                        
                                        <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                                   FontSize="12" Foreground="#605E5C" 
                                                   TextWrapping="Wrap" Margin="0,2,0,0"/>
                                        
                                        <TextBlock Grid.Row="2" 
                                                   FontSize="11" Foreground="#8A8886" 
                                                   Margin="0,4,0,0">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} displays • Modified: {1:MMM d, yyyy}">
                                                    <Binding Path="DisplaySettings.Count"/>
                                                    <Binding Path="LastModifiedDate"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="2" Background="White" BorderBrush="#E1DFDD" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#F8F8F8" BorderBrush="#E1DFDD" BorderThickness="0,0,0,1" Padding="16,12">
                        <TextBlock Text="Profile Details" 
                                   Style="{StaticResource ModernTextBlockStyle}" 
                                   FontWeight="SemiBold" FontSize="16"/>
                    </Border>

                    <ScrollViewer Grid.Row="1" Padding="16" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="ProfileDetailsPanel">
                            <TextBlock Text="Select a profile to view details" 
                                       Style="{StaticResource ModernTextBlockStyle}" 
                                       Foreground="#8A8886" 
                                       HorizontalAlignment="Center" 
                                       TextAlignment="Center" 
                                       Margin="0,32"/>
                        </StackPanel>
                    </ScrollViewer>

                    <Border Grid.Row="2" BorderBrush="#E1DFDD" BorderThickness="0,1,0,0" Padding="16,12">
                        <StackPanel>
                            <Button Name="ApplyProfileButton" Content="Apply Profile" 
                                    Style="{StaticResource ModernButtonStyle}" 
                                    Width="100" HorizontalAlignment="Center" 
                                    Margin="0,0,0,8" Click="ApplyProfileButton_Click"
                                    IsEnabled="False"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Name="EditProfileButton" Content="Edit" 
                                        Style="{StaticResource SecondaryButtonStyle}" 
                                        Width="60" Margin="0,0,8,0" 
                                        Click="EditProfileButton_Click"
                                        IsEnabled="False"/>
                                <Button Name="DeleteProfileButton" Content="Delete" 
                                        Style="{StaticResource SecondaryButtonStyle}" 
                                        Width="60" Click="DeleteProfileButton_Click"
                                        IsEnabled="False"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2" Background="White" BorderBrush="#E1DFDD" BorderThickness="0,1,0,0" Padding="24,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Name="StatusTextBlock" 
                           Text="Ready" 
                           Style="{StaticResource ModernTextBlockStyle}" 
                           FontSize="12" Foreground="#8A8886" 
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" Name="SettingsButton" Content="Settings" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Click="SettingsButton_Click"/>
            </Grid>
        </Border>
    </Grid>
    </Border>
</Window>
